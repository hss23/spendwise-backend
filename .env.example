# Application Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/spendwise
MONGODB_TEST_URI=mongodb://localhost:27017/spendwise-test

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRATION=7d

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=spendwise-backend
KAFKA_GROUP_ID=spendwise-consumer-group

# Rate Limiting Configuration
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DEST=./uploads

# API Configuration
API_PREFIX=api
API_VERSION=v1

# Cors Configuration
CORS_ORIGIN=http://localhost:3001,http://localhost:3000

# Swagger Configuration
SWAGGER_ENABLED=true
SWAGGER_PATH=api

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@spendwise.com

# External APIs (Optional)
EXCHANGE_RATE_API_KEY=
PLAID_CLIENT_ID=
PLAID_SECRET=

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE=logs/spendwise.log

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_key

# Feature Flags
ENABLE_KAFKA=true
ENABLE_REDIS_CACHE=true
ENABLE_OCR=true
ENABLE_NOTIFICATIONS=true
